@model OnlineECommerceApp.Models.ShippingDetail
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Home.cshtml";
}


@Html.Partial("_HeaderPartial", "Home")

<section class="section-content padding-y bg">
    <div class="container">



        <!-- ============================ COMPONENT 2 ================================= -->
        <div class="row">
            <main class="col-md-8">

                <article class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Review cart</h4>
                        <div class="row">

                            @Html.Action("Summary", "Home")

                        </div> <!-- row.// -->
                    </div> <!-- card-body.// -->
                </article> <!-- card.// -->


                @using (Html.BeginForm())
                {


                    @Html.ValidationSummary()

                    <article class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Contact info</h4>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label>First name</label>
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                    @*<input type="text" placeholder="First Name" name="FirstName" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>Last name</label>
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                    @*<input type="text" placeholder="Last Name" name="LastName" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>Phone</label>
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                    @*<input type="text" value="+998" name="Phone" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    @*<input type="email" placeholder="example@gmail.com" name="Email" class="form-control">*@
                                </div>
                            </div> <!-- row.// -->

                        </div> <!-- card-body.// -->
                    </article> <!-- card.// -->


                    <article class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Delivery info</h4>



                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label>City*</label>
                                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>Neigborhood*</label>
                                    @Html.TextBoxFor(x => x.Neighborhood, new { @class = "form-control" })
                                    @*<input type="text" placeholder="Type here" name="Neigborhood" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-8">
                                    <label>Street*</label>
                                    @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
                                    @*<input type="text" placeholder="Type here" name="Street" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-4">
                                    <label>Building*</label>
                                    @Html.TextBoxFor(x => x.Building, new { @class = "form-control" })
                                    @*<input type="text" placeholder="" name="Building" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-4">
                                    <label>Address Title*</label>
                                    @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control" })
                                    @*<input type="text" placeholder="Type here" name="AddressTitle" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-4">
                                    <label>Postal code</label>
                                    @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control" })
                                    @*<input type="text" placeholder="" name="PostalCode" class="form-control">*@
                                </div>
                                <div class="form-group col-sm-4">
                                    <label>Zip</label>
                                    @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control" })
                                    @*<input type="text" placeholder="" name="ZipCode" class="form-control">*@
                                </div>
                            </div> <!-- row.// -->

                        </div> <!-- card-body.// -->
                    </article> <!-- card.// -->
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Place Order</button>
                    </div>

                }


                @*<a href="./place-order.html" class="btn btn-primary btn-block"> Place Order </a>*@
                @*</form>*@

                <article class="accordion" id="accordion_pay">
                    <div class="card">
                        <header class="card-header">
                            <img src="~/greatkart/images/misc/payment-paypal.png" class="float-right" height="24">
                            <label class="form-check collapsed" data-toggle="collapse" data-target="#pay_paynet">
                                <input class="form-check-input" name="payment-option" checked type="radio" value="option2">
                                <h6 class="form-check-label">
                                    Paypal
                                </h6>
                            </label>
                        </header>
                        <div id="pay_paynet" class="collapse show" data-parent="#accordion_pay">
                            <div class="card-body">
                                <p class="text-center text-muted">Connect your PayPal account and use it to pay your bills. You'll be redirected to PayPal to add your billing information.</p>
                                <p class="text-center">
                                    <a href="#"><img src="~/greatkart/images/misc/btn-paypal.png" height="32"></a>
                                    <br><br>
                                </p>
                            </div> <!-- card body .// -->
                        </div> <!-- collapse .// -->
                    </div> <!-- card.// -->
                    <div class="card">
                        <header class="card-header">
                            <img src="~/greatkart/images/misc/payment-card.png" class="float-right" height="24">
                            <label class="form-check" data-toggle="collapse" data-target="#pay_payme">
                                <input class="form-check-input" name="payment-option" type="radio" value="option2">
                                <h6 class="form-check-label"> Credit Card  </h6>
                            </label>
                        </header>
                        <div id="pay_payme" class="collapse" data-parent="#accordion_pay">
                            <div class="card-body">
                                <p class="alert alert-success">Some information or instruction</p>
                                <form class="form-inline">
                                    <input type="text" class="form-control mr-2" placeholder="xxxx-xxxx-xxxx-xxxx" name="">
                                    <input type="text" class="form-control mr-2" style="width: 100px" placeholder="dd/yy" name="">
                                    <input type="number" maxlength="3" class="form-control mr-2" style="width: 100px" placeholder="cvc" name="">
                                    <button class="btn btn btn-success">Button</button>
                                </form>
                            </div> <!-- card body .// -->
                        </div> <!-- collapse .// -->
                    </div> <!-- card.// -->

                </article>
                <!-- accordion end.// -->

            </main> <!-- col.// -->
            <aside class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <dl class="dlist-align">
                            @{int tax = 10;}
                            <dt>Total price:</dt>
                            <dd class="text-right">$@ViewBag.TotalSum</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Tax:</dt>
                            <dd class="text-right"> $10.00</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Total:</dt>
                            <dd class="text-right text-dark b"><strong>$@ViewBag.Total</strong></dd>
                        </dl>
                        <hr>
                        <p class="text-center mb-3">
                            <img src="~/greatkart/images/misc/payments.png" height="26">
                        </p>
                        @*<a href="./place-order.html" class="btn btn-primary btn-block"> Place Order </a>*@

                    </div> <!-- card-body.// -->
                </div> <!-- card.// -->
            </aside> <!-- col.// -->
        </div> <!-- row.// -->
        <!-- ============================ COMPONENT 2 END//  ================================= -->




    </div> <!-- container .//  -->
</section>

