@model IEnumerable<OnlineECommerceApp.Models.Product>
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}

@Html.Partial("_HeaderPartial","Home")


<section class="section-intro padding-y-sm">
    <div class="container">

        <div class="intro-banner-wrap">
            <img src="~/greatkart/images/banners/1.jpg" class="img-fluid rounded">
        </div>

    </div> <!-- container //  -->
</section>

<section class="section-name padding-y-sm">
    <div class="container">

        <header class="section-heading">
            <a href="/Home/Store/" class="btn btn-outline-primary float-right">See all</a>
            <h3 class="section-title">Popular products</h3>
        </header><!-- sect-heading -->


        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card card-product-grid">
                        <a href="/Home/ProductDetail/@item.ProductID" class="img-wrap"> <img src="@item.ProductImage" style="height:200px;margin-top:20px;"> </a>
                        <figcaption class="info-wrap">
                            <a href="/Home/ProductDetail/@item.ProductID" class="title">@item.ProductName</a>
                            <div class="price mt-1">$@item.SalesPrice</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div> <!-- col.// -->

            }

        </div> <!-- row.// -->

    </div><!-- container // -->
</section>


