@model IEnumerable<OnlineECommerceApp.Models.CargoDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <p>
         Cargo Track No:  @Html.TextBox("p")
        <input type="submit" value="Search" />
    </p>
}


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TrackCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receiver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.TrackCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit","Cargo", new { id = item.CargoId }, new { @class="btn btn-primary"})
                @Html.ActionLink("CargoTracking", "CargoTracking","Cargo", new { id = item.CargoId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", "Cargo", new { id = item.CargoId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "Create","Cargo", new { @class="btn btn-info"})
</p>
