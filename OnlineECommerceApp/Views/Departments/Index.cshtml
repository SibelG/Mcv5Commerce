@model IEnumerable<OnlineECommerceApp.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<table class="table table-bordered" style="margin-top:20px; margin-right:20px; margin-left:20px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartmentID }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.DepartmentID }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartmentID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<p style="margin-left:20px;">
    @Html.ActionLink("Create New", "Create", "Departments",new { @class = "btn btn-success" })
</p>
