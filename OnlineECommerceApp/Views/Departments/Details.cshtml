@using  OnlineECommerceApp.Models
@model  IEnumerable<Personel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detail Page</h2>
<br/>

<div style="background-color:lightslategrey">
    <p>Departman Name:@ViewBag.d1</p>
</div>

<table class="table table-hover" style="margin-top:20px; margin-right:20px;">
    <tr>
        <th>PersonelID</th>
        <th>Name</th>
        <th>LastName</th>
        <th>Sales</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelID</td>
            <td>@x.PName</td>
            <td>@x.PLastName</td>
            <td><a href="/Departments/PersonelSales/@x.PersonelID" class="btn btn-default" style="background-color:palevioletred">Sales</a></td>
        </tr>
    }

</table>

