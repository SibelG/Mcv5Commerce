@model IEnumerable<OnlineECommerceApp.Models.Cari>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-striped" style="margin-top:20px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CMail)
        </th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CLastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CCity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CMail)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", "Caris", new { id = item.CariID }, new { @class = "btn btn-primary" })
    </td>
    <td>
        @Html.ActionLink("Details", "Details", "Caris", new { id = item.CariID }, new { @class = "btn btn-warning" })
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", "Caris", new { id = item.CariID }, new { @class = "btn btn-danger" })
    </td>
    <td>
        @Html.ActionLink("Sales History", "SalesHistory", "Caris", new { id = item.CariID }, new { @class = "btn btn-info" })
    </td>
</tr>
}

</table>
<p>
    @Html.ActionLink("Create New", "Create", "Caris", new { @class = "btn btn-success" })
</p>
