@model OnlineECommerceApp.Models.Cari


@using (Html.BeginForm("Settings", "CariPanel", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CariID)

    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Name</label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CName, new { @class = "form form-control" })


            </div>

        </div>
        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">LastName</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CLastName, new { @class = "form form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CMail, new { @class = "form form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">City</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CCity, new { @class = "form form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CPassword, new { @class = "form form-control" })

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Submit</button>

            </div>

        </div>

    </form>

}

