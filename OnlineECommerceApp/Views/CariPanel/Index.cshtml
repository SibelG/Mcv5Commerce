@model OnlineECommerceApp.Models.Cari

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariPanel.cshtml";
}
<br />
<h2>Cari Inforations</h2>

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
            {
                <table class="table table-hover">
                    <tr>
                        <td>
                            <label>Mail Address: @HttpContext.Current.User.Identity.Name</label>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(x => x.CName, new { @calss = "form form-control" })</td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(x => x.CLastName, new { @calss = "form form-control" })</td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(x => x.CCity, new { @calss = "form form-control" })</td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(x => x.CPassword, new { @calss = "form form-control" })</td>
                    </tr>
                   
                </table>
                <button class="btn btn-warning">Update My Informations</button>
            }

