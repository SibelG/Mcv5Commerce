@model IEnumerable<OnlineECommerceApp.Models.Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:20px; margin-right:20px; margin-left:20px;">
    <tr>
        <th>
            @Html.Label("ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>Edit</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PersonelID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PLastName)
    </td>
    <td>
        <img src="@item.PImage" style="width:80px;height:80px;"/>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department.DepartName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", "Personels", new { id = item.PersonelID }, new { @class = "btn btn-primary" })

    </td>
    <td>
        @Html.ActionLink("Details", "Details", "Personels", new { id = item.PersonelID }, new { @class = "btn btn-warning" })
    </td>
</tr>
    }

</table>
<p style="margin-left:20px;">
    @Html.ActionLink("Create New", "Create", "Personels", new { @class = "btn btn-success" })
</p>
